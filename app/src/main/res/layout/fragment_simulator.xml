<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.Simulator"
    android:background="@color/colorPrimaryBackground"
    android:clickable="true">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="How much you wanna borrow:" />

       <EditText
           android:id="@+id/taking_edittext__simulator"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="percent:" />

       <EditText
           android:id="@+id/percent_edittext_simulator"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="numberDecimal"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Years:" />

       <EditText
           android:id="@+id/year_edittext_simulator"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="number"/>

       <Button
           android:id="@+id/button_simulator"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="calcul"
           android:layout_gravity="center"/>


   </LinearLayout>

</FrameLayout>