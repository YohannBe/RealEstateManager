<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".view.activities.AddApartmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_big"
            android:paddingHorizontal="20dp"
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:ems="10"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_big"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/school"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/school_icons"
                android:text="school"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>

            <CheckBox
                android:id="@+id/commerce"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/shop_icons"
                android:text="commerce"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>

            <CheckBox
                android:id="@+id/parc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/park_icons"
                android:text="parc"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_big"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Bus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/bus_icons"
                android:text="Bus"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>

            <CheckBox
                android:id="@+id/Metro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/subway_icons"
                android:text="Metro"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>

            <CheckBox
                android:id="@+id/restaurant"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/restau_icons"
                android:text="restaurant"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_big"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Sport"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/sport_icons"
                android:text="Sport club"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>

            <CheckBox
                android:id="@+id/pool"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/pool_icons"
                android:text="Pool"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>

            <CheckBox
                android:id="@+id/Stadium"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:drawableTop="@drawable/foot_icons"
                android:text="Stadium"
                android:textAlignment="center"
                android:buttonTint="@color/colorSecondary"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adresse"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_big"
            android:ems="10"
            android:inputType="textPersonName" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="surface"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextNumberSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:ems="10"
            android:inputType="number" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_big"
            app:cardCornerRadius="5dp">

            <ImageButton
                android:id="@+id/imageview_apartment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryLight"
                android:scaleType="fitCenter"
                android:src="@drawable/add_photo_icons" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prix"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextNumberPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:ems="10"
            android:inputType="number" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/button_save_apartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:text="save"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>