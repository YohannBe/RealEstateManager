<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.AddApartmentActivity">

    <ImageView
        android:id="@+id/imageview_addapartment_activity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/apartment5"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/carview_addapartment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:padding="@dimen/padding_huge"
            app:cardCornerRadius="40dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="150dp"
                    android:paddingHorizontal="@dimen/padding_huge"
                    android:paddingTop="@dimen/padding_huge">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_a_real_estate"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/categoryTitle"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kind_of_real_estate"
                        android:textColor="@color/colorPrimary" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@color/colorPrimaryBackground"
                        android:padding="@dimen/padding_big"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <Spinner
                            android:id="@+id/spinner_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:textAlignment="center" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/full_description"
                        android:textColor="@color/colorPrimary" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@color/colorPrimaryBackground"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <EditText
                            android:id="@+id/editTextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryBackground"
                            android:drawableTint="@color/colorSecondary"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:padding="5dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_room"
                        android:textColor="@color/colorPrimary" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@color/colorPrimaryBackground"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <EditText
                            android:id="@+id/editTextroom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryBackground"
                            android:drawableTint="@color/colorSecondary"
                            android:ems="10"
                            android:inputType="number"
                            android:padding="@dimen/padding_normal" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/number_of_bathroom"
                                android:textColor="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:background="@color/colorPrimaryBackground"
                                app:cardCornerRadius="@dimen/radius_corner">

                                <EditText
                                    android:id="@+id/edittext_bathroom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryBackground"
                                    android:drawableTint="@color/colorSecondary"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:padding="@dimen/padding_normal" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/number_of_bedroom"
                                android:textColor="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:background="@color/colorPrimaryBackground"
                                app:cardCornerRadius="@dimen/radius_corner">

                                <EditText
                                    android:id="@+id/edittext_bedroom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryBackground"
                                    android:drawableTint="@color/colorSecondary"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:padding="@dimen/padding_normal" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/margin_big"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/school"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/school_icons"
                            android:text="@string/school"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/commerce"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/shop_icons"
                            android:text="@string/market"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/parc"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/park_icons"
                            android:text="@string/park"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/margin_big"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/Bus"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/bus_icons"
                            android:text="@string/bus"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/Metro"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/subway_icons"
                            android:text="@string/subway"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/restaurant"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/restau_icons"
                            android:text="@string/restaurant"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/margin_big"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/Sport"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/sport_icons"
                            android:text="@string/sport_club"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/pool"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/pool_icons"
                            android:text="@string/pool"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/Stadium"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:buttonTint="@color/colorSecondary"
                            android:drawableTop="@drawable/foot_icons"
                            android:text="@string/stadium"
                            android:textAlignment="center" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/st_number"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_big"
                                android:background="@color/colorPrimaryBackground"
                                app:cardCornerRadius="@dimen/radius_corner">

                                <EditText
                                    android:id="@+id/editTextNumberAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryBackground"
                                    android:drawableTint="@color/colorSecondary"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:padding="5dp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/street_name"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_big"
                                android:background="@color/colorPrimaryBackground"
                                app:cardCornerRadius="10dp">

                                <EditText
                                    android:id="@+id/editTextAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryBackground"
                                    android:drawableTint="@color/colorSecondary"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:padding="5dp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zip_code"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_big"
                                android:background="@color/colorPrimaryBackground"
                                app:cardCornerRadius="@dimen/radius_corner">

                                <EditText
                                    android:id="@+id/editTextzipcodeAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryBackground"
                                    android:drawableTint="@color/colorSecondary"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:padding="@dimen/padding_normal" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/city"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_big"
                                android:background="@color/colorPrimaryBackground"
                                app:cardCornerRadius="@dimen/radius_corner">

                                <EditText
                                    android:id="@+id/editTextcity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryBackground"
                                    android:drawableTint="@color/colorSecondary"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:padding="@dimen/padding_normal" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textColor="@color/colorPrimary" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@color/colorPrimaryBackground"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <EditText
                            android:id="@+id/editTextCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryBackground"
                            android:drawableTint="@color/colorSecondary"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:padding="@dimen/padding_normal" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/surface"
                        android:textColor="@color/black" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@color/colorPrimaryBackground"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <EditText
                            android:id="@+id/editTextNumberSurface"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryBackground"
                            android:drawableTint="@color/colorSecondary"
                            android:ems="10"
                            android:inputType="number"
                            android:padding="@dimen/padding_normal" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_big"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <ImageButton
                            android:id="@+id/imageview_apartment"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/colorPrimaryLight"
                            android:scaleType="fitCenter"
                            android:src="@drawable/add_photo_icons" />
                    </androidx.cardview.widget.CardView>

                    <HorizontalScrollView
                        android:id="@+id/hiddenScrollview_addapartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/linearlayout_addapartment_hidden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/colorPrimary" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_big"
                        android:background="@color/colorPrimaryBackground"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <EditText
                            android:id="@+id/editTextNumberPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryBackground"
                            android:drawableTint="@color/colorSecondary"
                            android:ems="10"
                            android:inputType="number"
                            android:padding="@dimen/padding_normal" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_big"
                        app:cardCornerRadius="@dimen/radius_corner">

                        <Button
                            android:id="@+id/button_save_apartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorSecondary"
                            android:text="save"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>